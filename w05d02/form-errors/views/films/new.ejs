<h1>New Film</h1>

<form class="cmxform" method="POST" action="/films" id="form">
  <div class="cmxform">
    <label for="cname">Name</label>
    <input type="text" name="name" id="cname" placeholder="Name" class="form-control">
  </div>
  <div class="form-group">
    <label for="creleaseDate">Release Date</label>
    <input type="date" name="releaseDate" id="creleaseDate" class="form-control" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
  </div>
  <div class="form-group">
    <label for="csynopsis">Synopsis</label>
    <textarea name="synopsis" id="csynopsis" placeholder="Synopsis" class="form-control" maxlength="255"></textarea>
  </div>
  <div class="form-group">
    <label for="cgenre">Genre</label>
    <select name="genre" id="cgenre" class="form-control select2">
      <% genres.forEach((genre) => { %>
        <option><%= genre %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="cwikipedia">Wikipedia Link</label>
    <input type="text" name="wikipedia" id="cwikipedia" placeholder="Wikipedia Link" class="form-control">
  </div>
  <div class="form-group">
    <label>Images</label>
    <input type="text" name="images[]" class="form-control">
    <input type="text" name="images[]" class="form-control">
    <input type="text" name="images[]" class="form-control">
  </div>

  <button class="btn btn-primary">Add</button>
</form>
