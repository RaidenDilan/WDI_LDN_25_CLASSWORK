<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<p>
  <strong>Photo:</strong>
  <%= image_tag @album.photo, width: 200 %>
</p>

<p>
  <strong>Release date:</strong>
  <%= @album.release_date %>
</p>

<p>
  <strong>Price:</strong>
  <%= @album.price %>
</p>

<p>
  <strong>Artists:</strong>
  <%= @album.artist.name %>
</p>

<p>
  <strong>Genres:</strong>
  <ul>
    <% @album.genres.each do |genre| %>
    <li><%= genre.name %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
